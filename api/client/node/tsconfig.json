{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2022",
    "declaration": true,
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "incremental": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "sourceMap": true
  },
  "include": ["**/*.ts"],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "scripts/**/*.ts",
    "dist/**/*.ts",
    "*.config.ts"
  ]
}
