{
  "name": "@openmeter/api-spec",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "compile": "pnpm compile:openapi && pnpm compile:v3 && pnpm compile:client",
    "compile:openapi": "tsp compile --config tspconfig.yaml ./src/cloud",
    "compile:v3": "tsp compile --config tspconfig.v3.yaml ./src/v3 && node ./scripts/flatten-allof-v3.mjs ./output/definitions/metering-and-billing/v3/openapi.MeteringAndBilling.yaml",
    "compile:client": "tsp compile --config tspconfig.client.yaml ./src",
    "bundle:v3": "openapi bundle output/definitions/metering-and-billing/v3/openapi.OpenMeter.yaml",
    "watch:openapi": "tsp compile --watch --config tspconfig.yaml ./src/cloud",
    "watch:v3": "tsp compile --watch --config tspconfig.v3.yaml ./src/v3",
    "watch:client": "tsp compile --watch --config tspconfig.client.yaml ./src",
    "format": "prettier --list-different --find-config-path --write .",
    "lint": "prettier --check .",
    "lint:fix": "prettier --write ."
  },
  "main": "./lib/index.js",
  "exports": {
    ".": {
      "typespec": "./src/cloud/main.tsp"
    },
    "./v3": {
      "typespec": "./src/v3/main.tsp"
    }
  },
  "devDependencies": {
    "@redocly/cli": "2.12.0",
    "@types/node": "24.10.1",
    "@typespec/compiler": "1.6.0",
    "@typespec/http": "1.6.0",
    "@typespec/http-client-python": "0.20.3",
    "@typespec/openapi": "1.6.0",
    "@typespec/openapi3": "1.6.0",
    "@typespec/prettier-plugin-typespec": "1.6.0",
    "@typespec/rest": "0.76.0",
    "@typespec/versioning": "0.76.0",
    "prettier": "3.6.2",
    "yaml": "2.8.2"
  },
  "private": true,
  "packageManager": "pnpm@10.28.0+sha512.05df71d1421f21399e053fde567cea34d446fa02c76571441bfc1c7956e98e363088982d940465fd34480d4d90a0668bc12362f8aa88000a64e83d0b0e47be48",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@typespec/http-client-python",
      "esbuild"
    ],
    "patchedDependencies": {
      "@typespec/compiler": "patches/@typespec__compiler.patch",
      "@typespec/http": "patches/@typespec__http.patch",
      "@typespec/openapi": "patches/@typespec__openapi.patch",
      "@typespec/openapi3": "patches/@typespec__openapi3.patch",
      "@typespec/http-client-python": "patches/@typespec__http-client-python.patch"
    }
  }
}
