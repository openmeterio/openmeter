root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.nix]
indent_size = 2

[{Makefile,*.mk}]
indent_style = tab

[*{.js,.jsx,.ts,.tsx,.json,.yaml,.yml,.html,.css,.md,.tsp,.hcl}]
indent_size = 2

[{*.go,go.mod,go.sum,go.work,go.work.sum}]
indent_style = tab
